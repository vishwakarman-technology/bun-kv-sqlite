{
    "name": "@vishwakarman-technology/bun-kv-sqlite",
    "version": "1.0.1",
    "license": "MIT",
    "author": "Vishwakarman Technology <developers@vishwakarman.tech>",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "prebuild": "bun run clean",
        "build:esm": "bun build ./src/index.ts --outfile ./dist/index.js --target node --format esm --packages external && tsc -p tsconfig.build.json",
        "build:cjs": "bun build ./src/index.ts --outfile ./dist/index.cjs --target node --format cjs --packages external",
        "build": "bun run build:cjs && bun run build:esm",
        "test": "bun test",
        "test:dist": "bun test tests/dist.test.ts",
        "postbuild": "bun run test:dist",
        "lint": "biome check .",
        "benchmark": "bun run benchmarks/index.ts",
        "prepare": "bun run build && bunx husky"
    },
    "type": "module",
    "devDependencies": {
        "@biomejs/biome": "2.3.9",
        "@types/bun": "latest",
        "@types/node": "^25.0.3",
        "husky": "^9.1.7"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@opentelemetry/api": "^1.9.0",
        "ulid": "^3.0.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 120,
        "tabWidth": 4
    },
    "publishConfig": {
        "scope": "@vishwakarman-technology",
        "registry": "https://npm.pkg.github.com",
        "access": "public",
        "tag": "latest",
        "dist-tag": "latest"
    }
}
