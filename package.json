{
	"name": "@vishwakarman-technology/bun-kv-sqlite",
	"version": "1.1.0",
	"description": "A fast, persistent Key-Value store for [Bun](https://bun.sh), backed by SQLite.",
	"keywords": [
		"BUN",
		"SQLITE",
		"KV"
	],
	"homepage": "https://github.com/vishwakarman-technology/bun-kv-sqlite#readme",
	"bugs": {
		"url": "https://github.com/vishwakarman-technology/bun-kv-sqlite/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vishwakarman-technology/bun-kv-sqlite.git"
	},
	"license": "MIT",
	"author": "Vishwakarman Technology <developers@vishwakarman.tech>",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"directories": {
		"test": "tests"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "rm -rf dist",
		"prebuild": "bun run clean && bun run version:minor",
		"build:esm": "bun build ./src/index.ts --outfile ./dist/index.js --target node --format esm --packages external && tsc -p tsconfig.build.json",
		"build:cjs": "bun build ./src/index.ts --outfile ./dist/index.cjs --target node --format cjs --packages external",
		"build": "bun run build:cjs && bun run build:esm",
		"pretest": "bun run version:patch",
		"test": "bun test",
		"test:dist": "bun test tests/dist.test.ts",
		"postbuild": "bun run test:dist",
		"benchmark": "bun run benchmarks/index.ts",
		"prepare": "bun run build && bunx husky",
		"lint": "bunx @biomejs/biome lint --write",
		"check": "bunx @biomejs/biome check --write",
		"version:major": "npm version major --no-git-tag-version",
		"version:minor": "npm version minor --no-git-tag-version",
		"version:patch": "npm version patch --no-git-tag-version"
	},
	"dependencies": {
		"@opentelemetry/api": "^1.9.0",
		"ulid": "^3.0.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.15",
		"@types/bun": "latest",
		"@types/node": "^25.0.3",
		"husky": "^9.1.7"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"publishConfig": {
		"scope": "@vishwakarman-technology",
		"access": "public"
	},
	"module": "./dist/index.js",
	"prettier": {
		"semi": false,
		"singleQuote": false,
		"trailingComma": "es5",
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": false,
		"bracketSpacing": true,
		"arrowParens": "avoid",
		"endOfLine": "auto"
	}
}
