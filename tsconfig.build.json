{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"declaration": true,
		"declarationDir": "./dist",
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*"],
	"exclude": [
		"tests/**/*",
		"benchmarks/**/*",
		"**/*.test.ts",
		"dist",
		"node_modules"
	]
}
